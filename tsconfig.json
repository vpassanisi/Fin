{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "module": "node16",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "./src",
    "types": ["svelte", "node"],
    "lib": ["es2021", "dom"],
    "paths": {
      "@renderer": ["renderer/*"]
    }
  }
}
